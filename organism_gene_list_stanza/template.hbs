<script>
$(document).ready(function() 
    { 
       // $("#contents").tablesorter( {sortList: [[6,1], [7,0]], widgets: ["zebra", "columns"]});
        $("#contents").tablesorter( {widgets: ["zebra", "columns"]});  
        $("#contents").dragtable({dragHandle:'.handle'});

        $(".hl_tr").hover(function(){
            $(this).addClass("rowHover");
        },function(){
            $(this).removeClass("rowHover");
        });

        $(".tax_id").click(function(){
            if($(this).closest(".hl_tr").hasClass("rowSelect")){
                $(this).closest(".hl_tr").removeClass("rowSelect");
            }else{
                $(this).closest(".hl_tr").addClass("rowSelect");
            }
        });
    } 
); 


</script>
