  <body>
    {{#if organism_gene_list}}
    <table border="1" id="contents" class="tablesorter dragable">
    <thead>
      <tr>
          <th><div class="handle">&harr;</div>gene id</th>
          <th><div class="handle">&harr;</div>attributes</th>
          <th><div class="handle">&harr;</div>EC number</th>
          <th><div class="handle">&harr;</div>citation</th>
          <th><div class="handle">&harr;</div>reactome</th>
          <th><div class="handle">&harr;</div>refseq</th>
          <th><div class="handle">&harr;</div>position</th>
      </tr>
    </thead>
    <tbody>
    {{#each organism_gene_list}}
      <tr class="hl_tr"><td class="left"><a href="{{gene}}">{{gene_name}}</a></td><td class="left limit300">{{attr}}</td><td class="left limit100">{{ec}}</td><td>{{citation}}</td><td class="left limit200">{{#if reactome}}<ul class="ul_none">{{#each reactome}}<li>{{this}}</li>{{/each}}</ul>{{/if}}</td><td class="left">{{seq}}</td><td>{{begin}}</td></tr>
