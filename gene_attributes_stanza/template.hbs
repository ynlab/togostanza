<!DOCTYPE html>

<html>
  <head>
    <title>Gene Attributes</title>
    {{#each css_uri}}
    <link rel="stylesheet" href="{{this}}" />
    {{/each}}
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/2.2.2/bootstrap.min.js"></script>
    {{adjust_iframe_height_script}}
    {{download_csv}}
    {{download_json}}
  </head>

  <body>
   {{#if gene_attributes}}
      <table class='table'>
        <tbody>
          <tr>
             <th class='span3'>Gene name</th>
             <td>{{gene_attributes.gene_name}}</td>
          </tr>
          <tr>
            <th>Locus tag</th>
            <td>{{gene_attributes.locus_tag}}</td>
          </tr>
          <tr>
            <th>Gene type</th>
            <td>{{gene_attributes.gene_type_label}}</td>
          </tr>
          <tr>
            <th>Organism</th>
            <td><a href='{{gene_attributes.tax_link}}' target='_blank'>{{gene_attributes.organism}}</a></td>
          </tr>
          <tr>
            <th>RefSeq</th>
            <td><a href='{{gene_attributes.refseq_link}}' target='blank'>{{gene_attributes.refseq_label}}</a></td>
          </tr>
          <tr>
            <th>Position</th>
            <td>{{gene_attributes.insdc_location}}</td>
          </tr>
          <tr>
            <th>Strand</th>
            <td>{{gene_attributes.strand}}</td>
          </tr>
          <tr>
            <th>Length</th>
            <td>{{gene_attributes.seq_length}}</td>
          </tr>
        </tbody>
      </table>
    {{else}}
      <div>
        No data
      </div>
    {{/if}}
  </body>
</html>

