<!DOCTYPE html>
<html>
<head>
  <title>Environment List (Phenotype based)</title>
  {{#each css_uri}}
  <link rel="stylesheet" type="text/css" href="{{this}}" />
  {{/each}}
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/d3/3.5.3/d3.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/nvd3/1.1.15-beta/nv.d3.min.js"></script>
  {{adjust_iframe_height_script}}
  <script>
    var data = [
    {{#each features}}
    {key:"{{environment}}", value:{{cnt}}, href:"{{meo_id}}", nolinked: false},
    {{/each}}
    ];

  // etc data pickup
  var etcIndex = null;
  var item = null;
  for (i in data) {
    if (data[i].href == "") {
      data[i].nolink = true;
      if (data[i].key == "") {
        etcIndex = i;
        item = data[i];
      }
    } else if (data[i].key == "") {
      data[i].key = "(No Data)";
    }
  }
  if (etcIndex !== null && item !== null) {
    item.key = "N/A";
    item.nolinked = true;
    data.splice(etcIndex,1);
    data.push(item);
  }
</script>

<style>
  body {
    position:relative;
  }
  h3 {
    line-height:1.0;
    font-size: 16px;
    line-weight: bold;
  }
  h3 + p {
    line-height:1.0;
  }
  #piechart {
    padding:0;
    border:none;
    float:left;
    border-radius:0;
    -moz-border-radius: 0;
    -moz-box-shadow: none;
    box-shadow: none;
  }
  #legendTable {
    margin-left: 520px;
    height:500px;
    overflow:scroll;
  }
  svg.piechart {
    width: 500px;
    height: 500px;
  }
  #piechart div.graph-caption {
    text-align:center;
  }
</style>
</head>

<body>
  <!-- Pie Chart -->
  <div id="piechart" class="with-3d-shadow with-transitions">
    {{#if general}}<div class="graph-caption">{{general.label}}</div>{{/if}}
    <svg class="piechart"></svg>
    <script>
      var colors = d3.scale.category20().range();

      nv.addGraph(function() {
        var width = 500;
        var height = 500;

        var chart = nv.models.pieChart()
        .x(function(d) { return d.key })
        .y(function(d) { return d.value })
        .labelThreshold(.05)
        .showLabels(true)
        .color(colors)
        .width(width)
        .height(height)
        .showLegend(false)
        .donut(true)
        .donutRatio(0.30);

        d3.select("#piechart svg")
        .datum(data)
        .transition().duration(1200)
        .attr('width', width)
        .attr('height', height)
        .call(chart);

        return chart;
      });
    </script>
  </div>

  <!-- Legend Tables -->
  <div id="legendTable">
    <table class="table">
      <thead>
        <tr>
          <th>Color</th>
          <th>Environment (MEO)</th>
          <th>The Number of Organisms</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
    <script>
      for (var i in data) {
      // Color Column
      var clrSpanItem = $("<span />");
      clrSpanItem.css("background-color", colors[ i % colors.length ]);
      clrSpanItem.css("display", "inline-block");
      clrSpanItem.css("height", "1em");
      clrSpanItem.css("width", "1em");
      clrSpanItem.text(" ");

      // Genus Name Column
      var clrItem = $("<td />");
      clrSpanItem.appendTo(clrItem);

      var keyItem = $("<td />");
      if (!data[i].nolinked) {
        var keyAnchor = $("<a />");
        keyAnchor.attr("href","http://togogenome.org/environment/" + data[i].href);
        keyAnchor.text(data[i].key);
        keyAnchor.appendTo(keyItem);
      }
      else {
        keyItem.text(data[i].key);
      }

      // Count Column
      var valItem = $("<td />").text(data[i].value);

      // Appendes
      var trItem = $("<tr />");
      clrItem.appendTo(trItem);
      keyItem.appendTo(trItem);
      valItem.appendTo(trItem);
      trItem.appendTo("#legendTable tbody");
    }
  </script>
</div>
</body>
</html>
